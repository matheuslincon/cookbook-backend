generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  password_hash String
  recipe        Recipe[]
  createdAt     DateTime @default(now())

  @@map("user")
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  ingredients  String[]
  instructions String
  imageUrl     String?
  category     Category
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  User   User @relation(fields: [userId], references: [id])
  userId Int

  @@map("recipe")
}

enum Category {
  BREAKFAST
  LUNCH
  DINNER
}
